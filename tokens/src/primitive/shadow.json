{
  "primitive": {
    "shadow": {
      "$description": "Box shadow scale for elevation hierarchy",
      "none": {
        "$value": "none",
        "$type": "shadow",
        "$description": "No shadow"
      },
      "xs": {
        "$value": {
          "offsetX": "0px",
          "offsetY": "1px",
          "blur": "2px",
          "spread": "0px",
          "color": "#0000000d"
        },
        "$type": "shadow",
        "$description": "Subtle shadow - cards on hover"
      },
      "sm": {
        "$value": {
          "offsetX": "0px",
          "offsetY": "1px",
          "blur": "3px",
          "spread": "0px",
          "color": "#0000001a"
        },
        "$type": "shadow",
        "$description": "Small shadow - buttons, inputs"
      },
      "md": {
        "$value": {
          "offsetX": "0px",
          "offsetY": "4px",
          "blur": "6px",
          "spread": "-1px",
          "color": "#0000001a"
        },
        "$type": "shadow",
        "$description": "Medium shadow - cards, dropdowns"
      },
      "lg": {
        "$value": {
          "offsetX": "0px",
          "offsetY": "10px",
          "blur": "15px",
          "spread": "-3px",
          "color": "#0000001a"
        },
        "$type": "shadow",
        "$description": "Large shadow - popovers, floating elements"
      },
      "xl": {
        "$value": {
          "offsetX": "0px",
          "offsetY": "20px",
          "blur": "25px",
          "spread": "-5px",
          "color": "#0000001a"
        },
        "$type": "shadow",
        "$description": "Extra large shadow - modals"
      },
      "2xl": {
        "$value": {
          "offsetX": "0px",
          "offsetY": "25px",
          "blur": "50px",
          "spread": "-12px",
          "color": "#00000040"
        },
        "$type": "shadow",
        "$description": "Largest shadow - dialogs, notifications"
      },
      "inner": {
        "$value": {
          "offsetX": "inset 0px",
          "offsetY": "2px",
          "blur": "4px",
          "spread": "0px",
          "color": "#0000000d"
        },
        "$type": "shadow",
        "$description": "Inner shadow - pressed states, wells"
      }
    }
  }
}
