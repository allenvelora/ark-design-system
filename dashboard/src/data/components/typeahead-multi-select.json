{
  "id": "typeahead-multi-select",
  "name": "Typeahead Multi Select",
  "description": "A searchable dropdown for selecting multiple values. Supports tag-based display, groups, select-all, limit tags, icons, and asynchronous loading.",
  "category": "forms",
  "status": "stable",
  "version": "1.0.0",
  "storybook": "?path=/docs/react-typeahead-multi-select--documentation",
  "storybook_stories": [
    "default", "with-groups", "with-select-all", "with-limit-tags",
    "with-display-group", "with-font-awesome-icons", "disabled-options-demo",
    "form-states-demo", "loading-demo", "simple-controlled-multi"
  ],
  "usage": {
    "do": [
      "Use when users need to select multiple items from a large list",
      "Show selected items as removable tags",
      "Provide a select-all option for batch selection",
      "Limit visible tags and show a count for overflow"
    ],
    "dont": [
      "Don't use for single selection — use Typeahead Single Select",
      "Don't use for small option sets (< 5) — use Checkbox group",
      "Don't forget to handle empty and loading states"
    ]
  },
  "variants": [
    {"name": "Default", "description": "Standard multi-select with tags"},
    {"name": "With Groups", "description": "Options organized by category"},
    {"name": "With Select All", "description": "Includes select/deselect all action"},
    {"name": "With Limit Tags", "description": "Caps visible tags with overflow count"}
  ],
  "props": [
    {"name": "options", "type": "Option[]", "required": true, "description": "Array of selectable options"},
    {"name": "value", "type": "string[]", "description": "Currently selected values"},
    {"name": "onChange", "type": "(values: string[]) => void", "description": "Callback when selection changes"},
    {"name": "placeholder", "type": "string", "description": "Placeholder text when empty"},
    {"name": "label", "type": "string", "description": "Field label"},
    {"name": "disabled", "type": "boolean", "default": "false", "description": "Disable the select"},
    {"name": "loading", "type": "boolean", "default": "false", "description": "Show loading indicator"},
    {"name": "selectAll", "type": "boolean", "default": "false", "description": "Show select-all option"},
    {"name": "maxTags", "type": "number", "description": "Maximum visible tags before overflow"},
    {"name": "error", "type": "string", "description": "Error message to display"}
  ],
  "tokens": {
    "colors": ["--color-surface-primary", "--color-text-primary", "--color-border-default", "--color-border-focus", "--color-action-primary-default"],
    "spacing": ["--space-50", "--space-100", "--space-150", "--space-200"],
    "shape": ["--radius-md", "--radius-full", "--shadow-lg"]
  },
  "accessibility": [
    {"guideline": "Use role=\"listbox\" with aria-multiselectable=\"true\"", "wcag": "4.1.2"},
    {"guideline": "Announce additions and removals to screen readers", "wcag": "4.1.3"},
    {"guideline": "Tag remove buttons must be keyboard accessible", "wcag": "2.1.1"},
    {"guideline": "Associate label with the input field", "wcag": "1.3.1"}
  ]
}
